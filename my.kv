<FileChoose>:
    title: "Open File"
    size_hint: .8, .8

    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            FileChooserListLayout

        Button:
            size_hint: (1, 0.1)
            text: "Load"
            on_release: root.load(filechooser.path, filechooser.selection)
            id: ldbtn


<MyGridLayout>:

    id: text_input
    cols: 1
    BoxLayout:
        
        cols: 2 
        orientation: "vertical"
        size: root.width, root.height

        BoxLayout:
            size_hint: (1, 0.1)

            Button:
                text: "New File"
                size_hint: (.2, 1)
                on_press: root.new()

            Button:
                text: "Open File"
                size_hint: (.2, 1)
                on_press: root.open()

            Button:
                text: "Save File"
                size_hint: (.2, 1)
                on_press: root.save()

            Button:
                text: "Save As File"
                size_hint: (.2, 1)
                on_press: root.saveAs()

            Button:
                text: "Link File"
                size_hint: (.2, 1)
                on_press: root.link()

        TextInput:
            id: text_input
